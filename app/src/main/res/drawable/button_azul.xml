<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >

            <corners
                android:radius="15dip" />

            <stroke
                android:width="1dip"
                android:color="#2124c9" />
            <gradient
                android:angle="-45"
                android:startColor="#020459"
                android:centerColor="#4347fa"
                android:endColor="#020459"  />

        </shape>
    </item>
    <item android:state_focused="true">
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="15dip" />

            <stroke
                android:width="1dip"
                android:color="#070861" />

            <solid
                android:color="#070861"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >

            <corners
                android:radius="15dip" />

            <stroke
                android:width="1dip"
                android:color="#5e7974" />

            <gradient
                android:angle="-90"
                android:startColor="#020459"
                android:centerColor="#020459"
                android:endColor="#020459" />
        </shape>
    </item>
</selector>