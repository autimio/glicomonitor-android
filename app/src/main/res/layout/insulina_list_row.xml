<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="7dp"
    android:paddingBottom="0dp"
    android:clickable="true"
    android:background="@color/colorBackgroundPrincipal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#ffffff"
        android:padding="4dp">

        <ImageView
            android:layout_marginTop="4dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/insulina"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/calendar"/>

        <ImageView
            android:layout_marginTop="40dp"
            android:layout_marginLeft="72dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/time"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:alpha="1"
            android:layout_alignParentRight="true"
            android:src="@drawable/insulina_icon"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            android:layout_marginRight="60dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/textDataInsulina"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="9dp"/>

        <TextView
            android:id="@+id/textHoraInsulina"
            android:layout_below="@id/textDataInsulina"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="9dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginRight="19dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/textQtdInsulina"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="U/Kg"
            android:layout_marginTop="40dp"
            android:layout_marginRight="7dp"
            android:textSize="15sp"/>

    </RelativeLayout>

</RelativeLayout>