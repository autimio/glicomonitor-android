<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="7dp"
    android:paddingBottom="0dp"
    android:clickable="true"
    android:background="@color/colorBackgroundPrincipal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:padding="4dp">

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/glico"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/calendar"/>

        <ImageView
            android:layout_marginTop="40dp"
            android:layout_marginLeft="72dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/time"/>

        <ImageView
            android:layout_marginTop="60dp"
            android:layout_marginLeft="58dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/refeicao"/>

        <TextView
            android:id="@+id/textDataGlicose"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"/>

        <TextView
            android:id="@+id/textHoraGlicose"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_below="@id/textDataGlicose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="100dp"/>

        <TextView
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="65dp"
            android:id="@+id/textRefeicaoGlicose"
            android:layout_marginLeft="101dp"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:alpha="1"
            android:layout_alignParentRight="true"
            android:src="@drawable/sangue_icon_2"
            android:textStyle="italic"
            android:layout_marginTop="25dp"
            android:layout_marginRight="78dp"
            android:textSize="15sp"/>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:textSize="33sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/textTaxaGlicose"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="mg/dl"
            android:layout_marginTop="55dp"
            android:layout_marginRight="7dp"
            android:textSize="15sp"/>

    </RelativeLayout>

</RelativeLayout>